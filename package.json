{
  "name": "vscode-api-tester",
  "displayName": "API Route Tester",
  "description": "Test Next.js and NestJS API routes directly from VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apiTester.sendRequest",
        "title": "API Tester: Send Request",
        "icon": "$(send)"
      },
      {
        "command": "apiTester.refresh",
        "title": "API Tester: Refresh Routes",
        "icon": "$(refresh)"
      },
      {
        "command": "apiTester.configureAuth",
        "title": "API Tester: Configure Authentication",
        "icon": "$(key)"
      },
      {
        "command": "apiTester.configureBaseUrl",
        "title": "API Tester: Configure Base URL",
        "icon": "$(link)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-tester",
          "title": "API Tester",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "api-tester": [
        {
          "id": "apiTester.routesList",
          "name": "Routes"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "apiTester.refresh",
          "when": "view == apiTester.routesList",
          "group": "navigation@1"
        },
        {
          "command": "apiTester.configureBaseUrl",
          "when": "view == apiTester.routesList",
          "group": "navigation@2"
        },
        {
          "command": "apiTester.configureAuth",
          "when": "view == apiTester.routesList",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "API Tester",
      "properties": {
        "apiTester.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL for API requests (e.g., http://localhost:3000)"
        },
        "apiTester.auth": {
          "type": "object",
          "default": {
            "type": "none"
          },
          "description": "Authentication configuration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5"
  }
}
